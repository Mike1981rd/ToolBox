@* Vista Parcial: Views/Instructors/_InstructorNotificationsTab.cshtml *@
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0" data-translate-key="tab_instructor_notifications_title">Notification Settings</h5>
    </div>
    <div class="card-body">
        <form id="instructorNotificationsForm">
            <h6 class="mb-3" data-translate-key="notifications_receive_for_items_label">You will receive notification for the below selected items.</h6>
            <div class="table-responsive">
                <table class="table table-striped table-borderless">
                    <thead>
                        <tr>
                            <th class="text-nowrap" data-translate-key="th_notifications_type">TYPE</th>
                            <th class="text-nowrap text-center" data-translate-key="th_notifications_email">EMAIL</th>
                            <th class="text-nowrap text-center" data-translate-key="th_notifications_browser">BROWSER</th>
                            <th class="text-nowrap text-center" data-translate-key="th_notifications_app">APP</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var notificationTypes = new[] {
                                new { Key = "new_for_you", LabelKey = "notification_type_new_for_you", Email = true, Browser = true, App = true },
                                new { Key = "account_activity", LabelKey = "notification_type_account_activity", Email = true, Browser = true, App = true },
                                new { Key = "new_browser_login", LabelKey = "notification_type_new_browser_login", Email = true, Browser = true, App = false },
                                new { Key = "new_device_linked", LabelKey = "notification_type_new_device_linked", Email = true, Browser = false, App = false }
                                // Añadir más tipos de notificación relevantes para un instructor
                            };
                        }
                        @foreach (var type in notificationTypes)
                        {
                            <tr>
                                <td class="text-nowrap" data-translate-key="@type.LabelKey">@type.LabelKey.Replace("notification_type_", "").Replace("_", " ").ToUpperInvariant()</td>
                                <td class="text-center">
                                    <div class="form-check form-switch d-inline-block">
                                        <input class="form-check-input" type="checkbox" role="switch" id="notif_@(type.Key)_email" name="Notif_@(type.Key)_Email" @(type.Email ? "checked" : "")>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="form-check form-switch d-inline-block">
                                        <input class="form-check-input" type="checkbox" role="switch" id="notif_@(type.Key)_browser" name="Notif_@(type.Key)_Browser" @(type.Browser ? "checked" : "")>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="form-check form-switch d-inline-block">
                                        <input class="form-check-input" type="checkbox" role="switch" id="notif_@(type.Key)_app" name="Notif_@(type.Key)_App" @(type.App ? "checked" : "")>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <hr class="my-4">

            <div class="row">
                <div class="col-md-6">
                    <h6 class="mb-2" data-translate-key="notifications_when_to_send_label">When should we send you notifications?</h6>
                    <select id="notificationFrequency" name="NotificationFrequency" class="form-select">
                        <option value="online" data-translate-key="notify_only_when_online">Only when I'm online</option>
                        <option value="anytime" data-translate-key="notify_anytime">Anytime</option>
                        <option value="daily_digest" data-translate-key="notify_daily_digest">Daily Digest</option>
                    </select>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary me-2" data-translate-key="save_changes_button">Save changes</button>
                <button type="reset" class="btn btn-outline-secondary" data-translate-key="discard_button">Discard</button>
            </div>
        </form>
    </div>
</div>

