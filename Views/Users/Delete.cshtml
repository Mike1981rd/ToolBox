@model ToolBox.Models.User

@{
    ViewData["Title"] = "Delete User";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Delete User</h1>
            <p class="lead">Are you sure you want to delete this user?</p>
        </div>
        <div class="col-auto d-flex align-items-center">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">Confirm Deletion</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone. All user data will be permanently removed.
                    </div>
                    
                    <h5 class="border-bottom pb-2">User Information</h5>
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>
                        
                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                        
                        <dt class="col-sm-3">Role</dt>
                        <dd class="col-sm-9"><span class="badge bg-info">@Html.DisplayFor(model => model.Role)</span></dd>
                        
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Created At</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
                    </dl>
                    
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i> Delete User
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Deletion Policy</h5>
                </div>
                <div class="card-body">
                    <p>Before confirming deletion, please consider:</p>
                    <ul>
                        <li>All user data will be permanently deleted</li>
                        <li>Any content created by this user will remain</li>
                        <li>This action cannot be reversed</li>
                    </ul>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        If you only want to prevent the user from logging in, consider deactivating their account instead of deleting it.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>