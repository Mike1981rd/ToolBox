@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<!-- Dashboard Content -->
<div class="dashboard-container">
    <!-- Welcome Section -->
    @if (ViewBag.PuedeVerMensajeBienvenidaDashboard == true || ViewBag.PuedeVerVideoBienvenidaDashboard == true)
    {
        <div class="welcome-section mb-4" id="welcomeSection">
            <div class="row">
                <!-- Welcome Message -->
                @if (ViewBag.PuedeVerMensajeBienvenidaDashboard == true)
                {
                    <div class="col-12 col-md-@(ViewBag.PuedeVerVideoBienvenidaDashboard == true ? "6" : "12") mb-3 mb-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h2 class="card-title" id="welcomeTitle">
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    Cargando...
                                </h2>
                                <div class="welcome-content" id="welcomeContent">
                                    <p class="text-muted">Cargando mensaje de bienvenida...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Welcome Video -->
                @if (ViewBag.PuedeVerVideoBienvenidaDashboard == true)
                {
                    <div class="col-12 col-md-@(ViewBag.PuedeVerMensajeBienvenidaDashboard == true ? "6" : "12") mb-3 mb-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body p-0">
                                <div class="video-container" id="videoContainer">
                                    <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Cargando video...</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Statistics Cards -->
    @if (ViewBag.PuedeVerCardTotalClientesDashboard == true || ViewBag.PuedeVerCardClientesActivosDashboard == true)
    {
        <div class="statistics-section">
            <h3 class="mb-4">Estad√≠sticas de Clientes</h3>
            <div class="row">
                <!-- Total Clients Card -->
                @if (ViewBag.PuedeVerCardTotalClientesDashboard == true)
                {
                    <div class="col-12 col-sm-6 col-lg-4 col-xl-3 mb-3">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row g-0 align-items-center">
                                    <div class="col">
                                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                            Total de Clientes
                                        </div>
                                        <div class="h5 mb-0 fw-bold text-gray-800" id="totalClientes">
                                            <span class="spinner-border spinner-border-sm" role="status"></span>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-users fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Active Clients Card -->
                @if (ViewBag.PuedeVerCardClientesActivosDashboard == true)
                {
                    <div class="col-12 col-sm-6 col-lg-4 col-xl-3 mb-3">
                        <div class="card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row g-0 align-items-center">
                                    <div class="col">
                                        <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                            Clientes Activos
                                        </div>
                                        <div class="h5 mb-0 fw-bold text-gray-800" id="clientesActivos">
                                            <span class="spinner-border spinner-border-sm" role="status"></span>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-user-check fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard-style.css" asp-append-version="true" />
    <style>
        /* Any additional inline styles can go here if needed */
    </style>
}

@section Scripts {
    <script src="~/js/dashboard.js"></script>
}