@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<!-- Dashboard Content -->
<div class="dashboard-container">
    <!-- Welcome Section -->
    @if (ViewBag.PuedeVerMensajeBienvenidaDashboard == true || ViewBag.PuedeVerVideoBienvenidaDashboard == true)
    {
        <div class="welcome-section mb-4" id="welcomeSection">
            <div class="row">
                <!-- Welcome Message -->
                @if (ViewBag.PuedeVerMensajeBienvenidaDashboard == true)
                {
                    <div class="col-lg-@(ViewBag.PuedeVerVideoBienvenidaDashboard == true ? "6" : "12") mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h2 class="card-title" id="welcomeTitle">
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    Cargando...
                                </h2>
                                <div class="welcome-content" id="welcomeContent">
                                    <p class="text-muted">Cargando mensaje de bienvenida...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Welcome Video -->
                @if (ViewBag.PuedeVerVideoBienvenidaDashboard == true)
                {
                    <div class="col-lg-@(ViewBag.PuedeVerMensajeBienvenidaDashboard == true ? "6" : "12") mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body p-0">
                                <div class="video-container" id="videoContainer">
                                    <div class="d-flex justify-content-center align-items-center" style="height: 300px;">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Cargando video...</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Statistics Cards -->
    @if (ViewBag.PuedeVerCardTotalClientesDashboard == true || ViewBag.PuedeVerCardClientesActivosDashboard == true)
    {
        <div class="statistics-section">
            <h3 class="mb-4">Estad√≠sticas de Clientes</h3>
            <div class="row">
                <!-- Total Clients Card -->
                @if (ViewBag.PuedeVerCardTotalClientesDashboard == true)
                {
                    <div class="col-xl-3 col-lg-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Total de Clientes
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalClientes">
                                            <span class="spinner-border spinner-border-sm" role="status"></span>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-users fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Active Clients Card -->
                @if (ViewBag.PuedeVerCardClientesActivosDashboard == true)
                {
                    <div class="col-xl-3 col-lg-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                            Clientes Activos
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="clientesActivos">
                                            <span class="spinner-border spinner-border-sm" role="status"></span>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-user-check fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .dashboard-container {
            padding: 20px 0;
        }

        .border-left-primary {
            border-left: .25rem solid #4e73df!important;
        }

        .border-left-success {
            border-left: .25rem solid #1cc88a!important;
        }

        .text-xs {
            font-size: .875rem;
        }

        .text-gray-300 {
            color: #dddfeb!important;
        }

        .text-gray-800 {
            color: #5a5c69!important;
        }

        .video-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }

        .video-container iframe,
        .video-container video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .welcome-content {
            max-height: 300px;
            overflow-y: auto;
        }

        .statistics-section h3 {
            color: #5a5c69;
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <script src="~/js/dashboard.js"></script>
}