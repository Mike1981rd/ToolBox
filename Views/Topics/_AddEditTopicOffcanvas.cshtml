@* Vista Parcial: Views/Topics/_AddEditTopicOffcanvas.cshtml *@
<div class="offcanvas offcanvas-end" tabindex="-1" id="addEditTopicOffcanvas" aria-labelledby="addEditTopicOffcanvasLabel" style="width: 600px;">
    <div class="offcanvas-header">
        <h5 id="addEditTopicOffcanvasLabel" class="offcanvas-title" data-translate-key="offcanvas_titles.addNewTopic">Add New Topic</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body mx-0 flex-grow-0 pt-0 h-100">
        <form class="add-edit-topic-form pt-0" id="addEditTopicForm">
            <input type="hidden" id="topicId" name="TopicId" value="0"> <!-- Para modo ediciÃ³n -->

            <div class="mb-3">
                <label class="form-label" for="topicName" data-translate-key="labels.topicName">Topic Name</label>
                <input type="text" class="form-control" id="topicName" name="Name" placeholder="Enter topic name" data-translate-placeholder-key="placeholders.topicName" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="topicDescription" data-translate-key="labels.description">Description</label>
                <textarea class="form-control" id="topicDescription" name="Description" rows="4" placeholder="Write a brief description..." data-translate-placeholder-key="placeholders.topicDescription"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="topicStatus" data-translate-key="labels.status">Status</label>
                <select id="topicStatus" name="Status" class="form-select">
                    <option value="active" data-translate-key="status_options.active">Active</option>
                    <option value="inactive" data-translate-key="status_options.inactive">Inactive</option>
                </select>
            </div>

            <div class="mt-4 d-flex">
                <button type="submit" class="btn btn-primary me-2 data-submit flex-grow-1" id="saveTopicBtn" data-translate-key="buttons.save">Save</button>
                <button type="reset" class="btn btn-outline-secondary flex-grow-1" data-bs-dismiss="offcanvas" data-translate-key="buttons.cancel">Cancel</button>
            </div>
        </form>
    </div>
</div>