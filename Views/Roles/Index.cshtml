                        <img src="data:image/svg+xml;base64," alt="User" class="avatar rounded-circle">
                        <img src="data:image/svg+xml;base64," alt="User" class="avatar rounded-circle">
                        <span class="avatar-counter rounded-circle">+1</span>
                    </div>
                    <a href="#" class="ms-auto"><i class="fas fa-copy text-muted"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Manager Role Card -->
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
