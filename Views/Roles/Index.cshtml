@model IEnumerable<ToolBox.Models.ViewModels.RoleListItemViewModel>

@{
    ViewData["Title"] = "Roles";
    Layout = "_AdminLayout";
}

<!-- Breadcrumbs -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard" data-translate-key="breadcrumbs.dashboard">Tablero</a></li>
        <li class="breadcrumb-item active" aria-current="page" data-translate-key="breadcrumb_roles_list">Roles</li>
    </ol>
</nav>

<h1 class="page-title" data-translate-key="roles_list_title">Roles List</h1>
<p class="text-muted mb-4" data-translate-key="roles_list_description">A role provided access to predefined menus and features so that depending on assigned role an administrator can have access to what user needs.</p>

<!-- Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Role Cards Section -->
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
    @foreach (var role in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm role-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="card-subtitle text-muted">
                            <span data-translate-key="total_users_role_prefix">Total</span> 
                            <span>@role.UserCount</span> 
                            <span data-translate-key="users_suffix">users</span>
                        </h6>
                        <div class="d-flex align-items-center">
                            <a asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id" class="text-primary small" data-translate-key="edit_role_link">Edit Role</a>
                            @if (role.UserCount == 0)
                            {
                                <a asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id" class="text-danger small ms-2" title="Delete Role" data-translate-title-key="delete_role_title">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            }
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        @{
                            var roleIcon = role.Name.ToLower() switch
                            {
                                "administrator" or "admin" => "fa-user-shield",
                                "manager" => "fa-user-tie",
                                "editor" => "fa-user-edit",
                                "author" => "fa-user-pen",
                                "subscriber" or "user" or "users" => "fa-user",
                                "support" => "fa-headset",
                                "maintainer" => "fa-wrench",
                                _ => "fa-user-tag"
                            };
                        }
                        <i class="fas @roleIcon text-primary me-2"></i>
                        <h5 class="card-title mb-0">@role.Name</h5>
                    </div>
                    @if (!string.IsNullOrEmpty(role.Description))
                    {
                        <p class="small text-muted mb-2">@role.Description</p>
                    }
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="avatar-group">
                            @if (role.UserCount > 0)
                            {
                                @* Show placeholder avatars for users *@
                                @for (int i = 0; i < Math.Min(3, role.UserCount); i++)
                                {
                                    var colors = new[] { "#7367F0", "#28C76F", "#EA5455", "#FF9F43", "#00CFE8" };
                                    var initials = new[] { "AB", "CD", "EF", "GH", "IJ" };
                                    var color = colors[i % colors.Length];
                                    var initial = initials[i % initials.Length];
                                    <img src="data:image/svg+xml;base64,@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes($@"<svg width='40' height='40' xmlns='http://www.w3.org/2000/svg'><circle cx='20' cy='20' r='20' fill='{color}'/><text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle' font-family='Arial, sans-serif' font-size='14' font-weight='bold' fill='white'>{initial}</text></svg>"))" alt="User" class="avatar rounded-circle">
                                }
                                @if (role.UserCount > 3)
                                {
                                    <span class="avatar-counter rounded-circle">+@(role.UserCount - 3)</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted small">No users assigned</span>
                            }
                        </div>
                        <a href="#" class="ms-2" title="Copy role"><i class="fas fa-copy text-muted"></i></a>
                    </div>
                </div>
            </div>
        </div>
    }

    
    <!-- Add New Role Card -->
    <div class="col">
        <a asp-controller="Roles" asp-action="Create" class="text-decoration-none">
            <div class="card h-100 shadow-sm add-role-card" style="cursor:pointer;">
                <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                    <div class="mb-3">
                        <img src="data:image/svg+xml;base64,@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(@"<svg width='120' height='120' xmlns='http://www.w3.org/2000/svg'><rect width='120' height='120' rx='8' fill='#f0f0f0'/><g transform='translate(30, 30)'><rect x='10' y='10' width='40' height='40' rx='4' fill='#e0e0e0'/><circle cx='45' cy='45' r='15' fill='#7367F0' opacity='0.3'/><path d='M45 40 v10 M40 45 h10' stroke='#7367F0' stroke-width='2' stroke-linecap='round'/></g></svg>"))" alt="Add Role" class="img-fluid mb-3" style="width: 120px; height: 120px;">
                    </div>
                    <h5 class="card-title text-primary mb-2" data-translate-key="add_new_role_card_title">Add New Role</h5>
                    <p class="card-text small text-muted" data-translate-key="add_new_role_card_text">Add new role, if it doesn't exist.</p>
                </div>
            </div>
        </a>
    </div>
    
    @* Comment out hardcoded cards
    <!-- Administrator Role Card -->
    <div class="col">
