                    <a href="#" class="text-primary small" data-translate-key="edit_role_link">Edit Role</a>
                </div>
                <h5 class="card-title mb-3" data-role-name="Restricted User">Restricted User</h5>
                <div class="d-flex align-items-center">
                    <div class="avatar-group">
                        <img src="https://via.placeholder.com/40/EA5455/FFFFFF?Text=KM" alt="User" class="avatar rounded-circle">
                        <img src="https://via.placeholder.com/40/FF9F43/FFFFFF?Text=LG" alt="User" class="avatar rounded-circle">
                    </div>
                    <a href="#" class="ms-auto"><i class="fas fa-copy text-muted"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Add New Role Card -->
    <div class="col">
        <div class="card h-100 shadow-sm add-role-card" data-bs-toggle="modal" data-bs-target="#addRoleModal" style="cursor:pointer;">
            <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                <div class="mb-3">
                    <i class="fas fa-plus-circle fa-3x text-primary"></i>
                </div>
                <h5 class="card-title" data-translate-key="add_new_role_card_title">Add New Role</h5>
                <p class="card-text small text-muted" data-translate-key="add_new_role_card_text">Add new role, if it doesn't exist.</p>
            </div>
        </div>
    </div>
</div>

<!-- Users Table Section -->
