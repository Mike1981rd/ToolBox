@{
    ViewData["Title"] = "Roles";
    Layout = "_AdminLayout";
}

<h1 class="page-title" data-translate-key="roles_list_title">Roles List</h1>
<p class="text-muted mb-4" data-translate-key="roles_list_description">A role provided access to predefined menus and features so that depending on assigned role an administrator can have access to what user needs.</p>

<!-- Role Cards Section -->
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
    <!-- Administrator Role Card -->
    <div class="col">
        <div class="card h-100 shadow-sm">
