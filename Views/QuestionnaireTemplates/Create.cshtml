@model ToolBox.Models.ViewModels.QuestionnaireTemplateCreateEditViewModel

@{
    ViewData["Title"] = "Crear Plantilla de Cuestionario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index")" data-translate-key="questionnaire_templates.page_title">Plantillas de Cuestionarios</a>
                        </li>
                        <li class="breadcrumb-item active" data-translate-key="questionnaire_templates.create_template">
                            Crear Plantilla
                        </li>
                    </ol>
                </nav>
            </div>
            <div class="col-auto ms-auto d-print-none">
                <div class="btn-list">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        <span data-translate-key="common.back">Volver</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page Content -->
<div class="page-body">
    <div class="container-xl">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <form asp-action="Create" method="post" class="card">
                    @Html.AntiForgeryToken()
                    
                    <div class="card-header">
                        <h3 class="card-title" data-translate-key="questionnaire_templates.template_details">
                            Detalles de la Plantilla
                        </h3>
                    </div>
                    
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label required" data-translate-key="questionnaire_templates.form.title">
                                Título de la Plantilla
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Ej: Evaluación de Satisfacción del Cliente" 
                                   data-translate-key="questionnaire_templates.form.title_placeholder" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        
                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label" data-translate-key="questionnaire_templates.form.description">
                                Descripción (Opcional)
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Describe el propósito y contexto de este cuestionario..."
                                      data-translate-key="questionnaire_templates.form.description_placeholder"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text" data-translate-key="questionnaire_templates.form.description_help">
                                Esta descripción se mostrará a los usuarios cuando respondan el cuestionario.
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer text-end">
                        <div class="d-flex">
                            <a href="@Url.Action("Index")" class="btn btn-link" data-translate-key="common.cancel">
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary ms-auto">
                                <i class="fas fa-save me-2"></i>
                                <span data-translate-key="questionnaire_templates.form.create_and_add_questions">Crear y Agregar Preguntas</span>
                            </button>
                        </div>
                    </div>
                </form>
                
                <!-- Help Card -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h4 class="card-title" data-translate-key="questionnaire_templates.help.title">
                            <i class="fas fa-lightbulb text-warning me-2"></i>
                            ¿Qué puedes hacer después?
                        </h4>
                        <ul class="mb-0">
                            <li data-translate-key="questionnaire_templates.help.step1">
                                Después de crear la plantilla, podrás agregar diferentes tipos de preguntas
                            </li>
                            <li data-translate-key="questionnaire_templates.help.step2">
                                Organizar el orden de las preguntas arrastrando y soltando
                            </li>
                            <li data-translate-key="questionnaire_templates.help.step3">
                                Asignar la plantilla completa a usuarios específicos para que respondan
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}