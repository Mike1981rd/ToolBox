<!-- DEPRECATED: Add/Edit Customer Offcanvas 
     This offcanvas has been replaced with full-page forms (CustomerForm.cshtml)
     for better user experience following Vuexy design patterns.
     
     Remove this file if no longer needed or keep for reference. -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="addCustomerOffcanvas" aria-labelledby="addCustomerOffcanvasLabel">
    <div class="offcanvas-header">
        <h5 id="addCustomerOffcanvasLabel" class="offcanvas-title" data-translate-key="offcanvas_add_customer_title">Add New Customer</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body mx-0 flex-grow-0">
        <form class="add-new-customer pt-0" id="addNewCustomerForm">
            <!-- Avatar Upload Section -->
            <div class="mb-3">
                <label class="form-label" for="customerAvatar" data-translate-key="offcanvas_customer_avatar">Customer Avatar</label>
                <div class="d-flex align-items-start align-items-sm-center gap-4">
                    <img src="data:image/svg+xml;base64," alt="Avatar" class="d-block rounded" height="100" width="100" id="uploadedAvatar">
                    <div class="button-wrapper">
                        <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                            <span class="d-none d-sm-block" data-translate-key="offcanvas_avatar_upload">Upload</span>
                            <i class="fas fa-upload d-block d-sm-none"></i>
                            <input type="file" id="upload" class="account-file-input" hidden accept="image/png, image/jpeg">
                        </label>
                        <button type="button" class="btn btn-label-secondary account-image-reset mb-4" data-translate-key="offcanvas_avatar_reset">Reset</button>
                        <p class="text-muted mb-0" data-translate-key="offcanvas_avatar_allowed">Allowed JPG, GIF or PNG. Max size of 800K</p>
                    </div>
                </div>
            </div>

            <!-- Customer Information -->
            <div class="row">
                <div class="col-12 col-md-6">
                    <label class="form-label" for="modalCustomerFirstName" data-translate-key="offcanvas_customer_first_name">First Name</label>
                    <input type="text" id="modalCustomerFirstName" name="modalCustomerFirstName" class="form-control" placeholder="John" data-translate-placeholder-key="offcanvas_customer_first_name_placeholder">
                </div>
                <div class="col-12 col-md-6">
                    <label class="form-label" for="modalCustomerLastName" data-translate-key="offcanvas_customer_last_name">Last Name</label>
                    <input type="text" id="modalCustomerLastName" name="modalCustomerLastName" class="form-control" placeholder="Doe" data-translate-placeholder-key="offcanvas_customer_last_name_placeholder">
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <label class="form-label" for="modalCustomerEmail" data-translate-key="offcanvas_customer_email">Email</label>
                    <input type="email" id="modalCustomerEmail" name="modalCustomerEmail" class="form-control" placeholder="john.doe@example.com" data-translate-placeholder-key="offcanvas_customer_email_placeholder">
                </div>
            </div>

            <!-- Password Section (Only for Add mode) -->
            <div id="passwordSection">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="modalCustomerPassword" data-translate-key="offcanvas_customer_password">Password</label>
                        <div class="form-password-toggle">
                            <div class="input-group input-group-merge">
                                <input type="password" id="modalCustomerPassword" name="modalCustomerPassword" class="form-control" placeholder="············" aria-describedby="customerPassword" data-translate-placeholder-key="offcanvas_customer_password_placeholder">
                                <span class="input-group-text cursor-pointer" id="customerPassword"><i class="fas fa-eye-slash"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="modalCustomerConfirmPassword" data-translate-key="offcanvas_customer_confirm_password">Confirm Password</label>
                        <div class="form-password-toggle">
                            <div class="input-group input-group-merge">
                                <input type="password" id="modalCustomerConfirmPassword" name="modalCustomerConfirmPassword" class="form-control" placeholder="············" aria-describedby="customerConfirmPassword" data-translate-placeholder-key="offcanvas_customer_confirm_password_placeholder">
                                <span class="input-group-text cursor-pointer" id="customerConfirmPassword"><i class="fas fa-eye-slash"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="row">
                <div class="col-12 col-md-6">
                    <label class="form-label" for="modalCustomerPhone" data-translate-key="offcanvas_customer_phone">Phone Number</label>
                    <input type="tel" id="modalCustomerPhone" name="modalCustomerPhone" class="form-control phone-mask" placeholder="+1 (609) 988-44-11" data-translate-placeholder-key="offcanvas_customer_phone_placeholder">
                </div>
                <div class="col-12 col-md-6">
                    <label class="form-label" for="modalCustomerCompany" data-translate-key="offcanvas_customer_company">Company</label>
                    <input type="text" id="modalCustomerCompany" name="modalCustomerCompany" class="form-control" placeholder="Pixinvent" data-translate-placeholder-key="offcanvas_customer_company_placeholder">
                </div>
            </div>

            <!-- Country Selection -->
            <div class="row">
                <div class="col-12">
                    <label for="modalCustomerCountry" class="form-label" data-translate-key="offcanvas_customer_country">Country</label>
                    <select id="modalCustomerCountry" name="modalCustomerCountry" class="form-select select2" data-allow-clear="true" data-translate-placeholder-key="offcanvas_customer_country_select">
                        <option value="">Select</option>
                        <option value="Australia">Australia</option>
                        <option value="Bangladesh">Bangladesh</option>
                        <option value="Belarus">Belarus</option>
                        <option value="Brazil">Brazil</option>
                        <option value="Canada">Canada</option>
                        <option value="China">China</option>
                        <option value="France">France</option>
                        <option value="Germany">Germany</option>
                        <option value="India">India</option>
                        <option value="Indonesia">Indonesia</option>
                        <option value="Israel">Israel</option>
                        <option value="Italy">Italy</option>
                        <option value="Japan">Japan</option>
                        <option value="Korea">Korea, Republic of</option>
                        <option value="Mexico">Mexico</option>
                        <option value="Philippines">Philippines</option>
                        <option value="Russia">Russian Federation</option>
                        <option value="South Africa">South Africa</option>
                        <option value="Thailand">Thailand</option>
                        <option value="Turkey">Turkey</option>
                        <option value="Ukraine">Ukraine</option>
                        <option value="United Arab Emirates">United Arab Emirates</option>
                        <option value="United Kingdom">United Kingdom</option>
                        <option value="United States">United States</option>
                    </select>
                </div>
            </div>

            <!-- Address Information -->
            <div class="row">
                <div class="col-12">
                    <label class="form-label" for="modalCustomerAddress" data-translate-key="offcanvas_customer_address">Address</label>
                    <input type="text" id="modalCustomerAddress" name="modalCustomerAddress" class="form-control" placeholder="1208 Virginie Lane" data-translate-placeholder-key="offcanvas_customer_address_placeholder">
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-4">
                    <label class="form-label" for="modalCustomerState" data-translate-key="offcanvas_customer_state">State</label>
                    <input type="text" id="modalCustomerState" name="modalCustomerState" class="form-control" placeholder="Alabama" data-translate-placeholder-key="offcanvas_customer_state_placeholder">
                </div>
                <div class="col-12 col-md-4">
                    <label class="form-label" for="modalCustomerZip" data-translate-key="offcanvas_customer_zip">Zip Code</label>
                    <input type="text" id="modalCustomerZip" name="modalCustomerZip" class="form-control" placeholder="500014" data-translate-placeholder-key="offcanvas_customer_zip_placeholder">
                </div>
                <div class="col-12 col-md-4">
                    <label class="form-label" for="modalCustomerTaxID" data-translate-key="offcanvas_customer_tax_id">Tax ID</label>
                    <input type="text" id="modalCustomerTaxID" name="modalCustomerTaxID" class="form-control" placeholder="Tax-8894" data-translate-placeholder-key="offcanvas_customer_tax_id_placeholder">
                </div>
            </div>

            <!-- Language Selection -->
            <div class="row">
                <div class="col-12">
                    <label for="modalCustomerLanguage" class="form-label" data-translate-key="offcanvas_customer_language">Language</label>
                    <select id="modalCustomerLanguage" name="modalCustomerLanguage" class="form-select select2" data-allow-clear="true" data-translate-placeholder-key="offcanvas_customer_language_select">
                        <option value="">Select Language</option>
                        <option value="en">English</option>
                        <option value="es">Spanish</option>
                        <option value="fr">French</option>
                        <option value="de">German</option>
                        <option value="pt">Portuguese</option>
                    </select>
                </div>
            </div>

            <!-- Status -->
            <div class="row">
                <div class="col-12">
                    <label for="modalCustomerStatus" class="form-label" data-translate-key="offcanvas_customer_status">Status</label>
                    <select id="modalCustomerStatus" name="modalCustomerStatus" class="form-select">
                        <option value="active" data-translate-key="status_active">Active</option>
                        <option value="inactive" data-translate-key="status_inactive">Inactive</option>
                        <option value="pending" data-translate-key="status_pending">Pending</option>
                    </select>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="pt-4">
                <button type="submit" class="btn btn-primary me-sm-3 me-1" data-translate-key="offcanvas_customer_submit">Submit</button>
                <button type="reset" class="btn btn-label-secondary" data-bs-dismiss="offcanvas" data-translate-key="offcanvas_customer_cancel">Cancel</button>
            </div>
        </form>
    </div>
</div>