            </div>
        </div>
    </div>
</div>

<hr>
<h3>Test de API</h3>
<button class="btn btn-primary" onclick="testAPI()">Probar API</button>
<div id="apiResult"></div>

<script>
function testAPI() {
    fetch('/api/dashboard/welcome-message-config')
        .then(response => {
            document.getElementById('apiResult').innerHTML = 'Status: ' + response.status;
            return response.json();
        })
        .then(data => {
            document.getElementById('apiResult').innerHTML += '<br>Data: ' + JSON.stringify(data);
        })
        .catch(error => {
            document.getElementById('apiResult').innerHTML = 'Error: ' + error;
        });
}
</script>