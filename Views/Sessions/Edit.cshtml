        }
        
        /* File Preview Styles */
        .file-preview-list {
            max-height: 400px;
            overflow-y: auto;
        }
        
        .file-preview-item {
            display: flex;
            align-items: center;
            padding: 0.75rem;
            margin-bottom: 0.5rem;
            background-color: #f8f9fa;
            border-radius: 0.375rem;
