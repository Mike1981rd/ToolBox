        }
        
        .file-name {
            font-weight: 500;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .file-size {
            font-size: 0.875rem;
            color: #6c757d;
        }
        
        .file-remove-btn {
            margin-left: auto;
            padding: 0.25rem 0.5rem;
        }
    </style>
}