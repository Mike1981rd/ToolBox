@* Vista: Views/LifeAreas/Index.cshtml *@
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")" data-translate-key="breadcrumb_dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page" data-translate-key="@ViewBag.BreadcrumbActiveKey">Areas of Life List</li>
    </ol>
</nav>

<div class="card shadow-sm">
    <div class="card-datatable table-responsive pt-0">
        <div class="dataTables_wrapper dt-bootstrap5 no-footer">
            <div class="row p-3 align-items-center">
                <div class="col-sm-12 col-md-4 col-lg-6">
                    <div class="dataTables_filter_custom"> <!-- Contenedor para búsqueda -->
                        <input type="search" class="form-control form-control-sm" placeholder="Search Area of Life" data-translate-placeholder-key="search_category_placeholder">
                    </div>
                </div>
                <div class="col-sm-12 col-md-8 col-lg-6 d-flex justify-content-center justify-content-md-end">
                    <div class="dataTables_length me-2">
                         <label>
                            <select name="lifeAreasTable_length" class="form-select form-select-sm">
                                <option value="7">7</option> <option value="10">10</option>
                                <option value="25">25</option> <option value="50">50</option>
                            </select>
                        </label>
                    </div>
                    <div class="dt-buttons btn-group flex-wrap">
                        <button class="btn btn-sm btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#addEditLifeAreaOffcanvas" aria-controls="addEditLifeAreaOffcanvas" id="addNewLifeAreaBtn">
                            <i class="fas fa-plus me-1"></i> <span data-translate-key="add_category_button">Add Area of Life</span>
                        </button>
                    </div>
                </div>
            </div>

            <table class="table table-hover dataTable no-footer dtr-column" id="lifeAreasTable">
                <thead>
                    <tr>
                        <th class="sorting_disabled dt-checkboxes-cell dt-checkboxes-select-all" style="width: 18px;"><input type="checkbox" class="form-check-input"></th>
                        <th data-translate-key="th_life_area_categories">AREA OF LIFE</th>
                        @* Las siguientes dos columnas no aplican directamente, se pueden omitir o adaptar si hay métricas relevantes *@
                        @* <th data-translate-key="th_life_area_total_products">SUB-ITEMS</th> *@
                        @* <th data-translate-key="th_life_area_total_earning">PROGRESS</th> *@
                        <th data-translate-key="th_life_area_actions">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var lifeAreas = new[] {
                            new { Id = 1, TitleKey = "life_area_spirituality", DescriptionKey = "description_spirituality", IconClass="fas fa-pray", IconBg="bg-label-primary" },
                            new { Id = 2, TitleKey = "life_area_growth_learning", DescriptionKey = "description_growth_learning", IconClass="fas fa-brain", IconBg="bg-label-success"  },
                            new { Id = 3, TitleKey = "life_area_social_love", DescriptionKey = "description_social_love", IconClass="fas fa-heart", IconBg="bg-label-danger"  },
                            // Añadir el resto de áreas de la Imagen 3
                            new { Id = 4, TitleKey = "life_area_family_friends", DescriptionKey="description_family_friends", IconClass="fas fa-users", IconBg="bg-label-warning" },
                            new { Id = 5, TitleKey = "life_area_community", DescriptionKey="description_community", IconClass="fas fa-city", IconBg="bg-label-info" },
                            new { Id = 6, TitleKey = "life_area_environment", DescriptionKey="description_environment", IconClass="fas fa-leaf", IconBg="bg-label-success" },
                            new { Id = 7, TitleKey = "life_area_work_mission", DescriptionKey="description_work_mission", IconClass="fas fa-briefcase", IconBg="bg-label-primary" },
                            new { Id = 8, TitleKey = "life_area_economy_finance", DescriptionKey="description_economy_finance", IconClass="fas fa-dollar-sign", IconBg="bg-label-warning" },
                            new { Id = 9, TitleKey = "life_area_health_body", DescriptionKey="description_health_body", IconClass="fas fa-heartbeat", IconBg="bg-label-danger" },
                            new { Id = 10, TitleKey = "life_area_recreation_fun", DescriptionKey="description_recreation_fun", IconClass="fas fa-gamepad", IconBg="bg-label-info" }
                        };
                    }
                    @foreach (var area in lifeAreas)
                    {
                        <tr>
                            <td class="dt-checkboxes-cell"><input type="checkbox" class="form-check-input dt-checkboxes"></td>
                            <td>
                                <div class="d-flex justify-content-start align-items-center">
                                    <div class="avatar-wrapper me-3">
                                        <div class="avatar avatar-sm @area.IconBg bg-opacity-25">
                                            <i class="@area.IconClass"></i>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span class="text-body text-truncate fw-semibold" data-translate-key="@area.TitleKey">@area.TitleKey</span>
                                        <small class="text-muted" data-translate-key="@area.DescriptionKey">Brief description...</small>
                                    </div>
                                </div>
                            </td>
                            @* Columnas opcionales (Total Products, Total Earning) omitidas por ahora *@
                            <td>
                                <div class="d-inline-block text-nowrap">
                                    <button class="btn btn-sm btn-icon edit-life-area-btn" data-id="@area.Id" data-bs-toggle="offcanvas" data-bs-target="#addEditLifeAreaOffcanvas"><i class="fas fa-edit"></i></button>
                                    <button class="btn btn-sm btn-icon deactivate-life-area-btn" data-id="@area.Id"><i class="fas fa-toggle-off"></i></button> <!-- O fas fa-trash-alt si se prefiere -->
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- Paginación (similar a otros módulos) -->
             <div class="row p-3 align-items-center">
                <div class="col-sm-12 col-md-5">
                    <div class="dataTables_info">Showing 1 to 10 of 10 entries</div>
                </div>
                <div class="col-sm-12 col-md-7">
                    <div class="dataTables_paginate paging_simple_numbers">
                        <ul class="pagination justify-content-center justify-content-md-end">
                            <li class="paginate_button page-item previous disabled"><a href="#" class="page-link">«</a></li>
                            <li class="paginate_button page-item active"><a href="#" class="page-link">1</a></li>
                            <li class="paginate_button page-item next disabled"><a href="#" class="page-link">»</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Offcanvas para Añadir/Editar Área de Vida -->
@await Html.PartialAsync("_AddEditLifeAreaOffcanvas")

@section Scripts {
    <script src="~/js/life-areas.js"></script>
}