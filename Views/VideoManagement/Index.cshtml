@* Vista: Views/VideoManagement/Index.cshtml *@
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")" data-translate-key="breadcrumb_dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page" data-translate-key="@ViewBag.BreadcrumbActiveKey">Video Management List</li>
    </ol>
</nav>

<div class="card shadow-sm">
    <div class="card-datatable table-responsive pt-0">
        <div class="dataTables_wrapper dt-bootstrap5 no-footer">
            <div class="row p-3 align-items-center">
                <div class="col-sm-12 col-md-4 col-lg-6">
                    <div class="dataTables_filter_custom">
                        <input type="search" class="form-control form-control-sm" placeholder="Search Videos..." data-translate-placeholder-key="search.placeholder.videos" id="videosSearchInput">
                    </div>
                </div>
                <div class="col-sm-12 col-md-8 col-lg-6 d-flex justify-content-center justify-content-md-end">
                    <div class="dataTables_length me-2">
                         <label>
                            <select name="videosTable_length" class="form-select form-select-sm" id="videosPageSize">
                                <option value="7">7</option> 
                                <option value="10" selected>10</option>
                                <option value="25">25</option> 
                                <option value="50">50</option>
                            </select>
                        </label>
                    </div>
                    <div class="dt-buttons btn-group flex-wrap">
                        <button class="btn btn-sm btn-primary" type="button" onclick="window.location.href='@Url.Action("VideoForm", "VideoManagement")'" id="addNewVideoBtn">
                            <i class="fas fa-plus me-1"></i> <span data-translate-key="buttons.addNewVideo">Add New Video</span>
                        </button>
                    </div>
                </div>
            </div>

            <table class="table table-hover dataTable no-footer dtr-column" id="videosTable">
                <thead>
                    <tr>
                        <th class="sorting_disabled dt-checkboxes-cell dt-checkboxes-select-all" style="width: 18px;">
                            <input type="checkbox" class="form-check-input">
                        </th>
                        <th data-translate-key="th_video_title">TITLE</th>
                        <th data-translate-key="th_video_topic">TOPIC</th>
                        <th data-translate-key="th_video_author">AUTHOR</th>
                        <th data-translate-key="th_video_upload_date">UPLOAD DATE</th>
                        <th data-translate-key="th_video_actions">ACTIONS</th>
                    </tr>
                </thead>
                <tbody id="videosTableBody">
                    <!-- Los videos se cargarán dinámicamente via JavaScript -->
                </tbody>
            </table>
            
            <!-- Paginación -->
             <div class="row p-3 align-items-center">
                <div class="col-sm-12 col-md-5">
                    <div class="dataTables_info" id="videosTableInfo">Showing 0 to 0 of 0 entries</div>
                </div>
                <div class="col-sm-12 col-md-7">
                    <div class="dataTables_paginate paging_simple_numbers">
                        <ul class="pagination justify-content-center justify-content-md-end" id="videosPagination">
                            <!-- Pagination will be generated dynamically -->
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/video-management.js"></script>
}